<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <CheckBox
        android:id="@+id/bid_list_item_solvedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:id="@+id/bid_list_item_addressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/bid_list_item_solvedCheckBox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Адрес заявки"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bid_list_item_dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bid_list_item_addressTextView"
        android:layout_toLeftOf="@id/bid_list_item_solvedCheckBox"
        android:padding="4dp"
        android:text="Дата заявки" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ccc"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_alignBottom="@id/bid_list_item_dateTextView" />

</RelativeLayout>